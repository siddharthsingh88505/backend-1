<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Upload New Cloth</title>
    <!-- bootstrap css -->
    <link rel="stylesheet" href="css/bootstrap.min.css" />
    <!-- font-awesome icon -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css"
      integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <!-- custom css -->
    <link rel="stylesheet" href="css/upload-cloth.css" />
  </head>

  <body>
    <!-- upload section -->
    <div class="upload-section">
      <!-- failed error message -->
      <div class="upload-section-div">
        <div class="form-container form-section">
          <h2 class="text-center form-title">Cloth Upload Form</h2>
          <form
            action="/upload-cloth"
            method="post"
            enctype="multipart/form-data"
          >
            <div class="input-brand-name">
              <input
                type="text"
                id="brand_name"
                name="brand_name"
                class="name"
                placeholder="Brand Name"
                autofocus
                required="true"
              />
            </div>
            <div class="input-cloth-name">
              <input
                type="text"
                id="cloth_name"
                name="cloth_name"
                class=""
                placeholder="Cloth Name"
                required
              />
            </div>
            <div class="input-org-price">
              <input
                type="number"
                id="org_price"
                name="original_price"
                class=""
                pattern="[0-9]+"
                placeholder="Original Price"
                required
              />
            </div>
            <div class="input-discount">
              <input
                type="number"
                name="discount"
                class=""
                pattern="[0-9]+"
                placeholder="Discount Percent"
                required
              />
            </div>
            <div class="input-cloth-type">
              <input
                type="text"
                name="cloth_type"
                class=""
                placeholder="Cloth Type"
                required
              />
            </div>
            <div class="input-cloth-category">
              <select
                name="category"
                id="category"
                class="category"
                required="true"
              >
                <option value="-1">Select Category</option>
                <option value="Basics">Basics</option>
                <option value="Graphics">Graphics Printed</option>
                <option value="Florat">Florat</option>
                <option value="Limited">Limited</option>
              </select>
            </div>
            <div class="input-cloth-material">
              <input
                type="text"
                name="cloth_material"
                class=""
                placeholder="Cloth Material"
                required
              />
            </div>
            <div class="input-cloth-color">
              <input
                type="text"
                name="cloth_color"
                class=""
                placeholder="Cloth Color"
                required
              />
            </div>
            <div class="input-prod">
              <input
                type="text"
                name="production_country"
                class=""
                placeholder="Production Country"
                required
              />
            </div>
            <div class="input-image text-center">
              <label for="input-image">
                <div>Select Image <i class="fa-solid fa-image"></i></div>
                <input
                  type="file"
                  id="input-image"
                  name="image"
                  class=""
                  accept="image/*"
                  multiple
                  required
                />
              </label>
              <span id="image-name"></span>
            </div>
            <p class="error"></p>
            <div class="input-submit">
              <input type="submit" class="submit-btn" value="UPLOAD" />
            </div>
          </form>
        </div>
      </div>
    </div>

    <script src="js/upload-cloth.js"></script>
  </body>
</html>
